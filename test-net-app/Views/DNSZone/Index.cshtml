@model IEnumerable<test_net_app.Models.DNSZones>

@{
    ViewData["Title"] = "Index";

}

<h1>DNS Management Console</h1>


@{

    if (TempData["Error"] is not null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }


}
<p>
    <a class="btn btn-default" asp-action="Create">Create New Zone</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Doamin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NS1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NS2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NS3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NS4)
            </th>
            <th>Zone</th>
            <th>DNS Records</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doamin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NS1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NS2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NS3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NS4)
            </td>
            <td>
                <div class="btn-group btn-group-xs" role="group">
                    <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-default" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
                <br />
            </td>
            <td>
                <div class="btn-group btn-group-xs" role="group">
                    <a class="btn btn-default" asp-controller="DNSRecord" asp-action="Details" asp-route-id="@item.Id">View</a>
                    <a class="btn btn-default" asp-controller="DNSRecord" asp-action="Create" asp-route-ZoneId="@item.Id" asp-route-Name="@item.Doamin">Add</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
