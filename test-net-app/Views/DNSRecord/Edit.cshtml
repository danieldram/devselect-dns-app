                <label asp-for="RecordData" class="control-label"></label>
                <input asp-for="RecordData" class="form-control" />
                <span asp-validation-for="RecordData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

