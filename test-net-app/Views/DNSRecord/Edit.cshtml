            </div>
            <div class="form-group">
                <label asp-for="TTL" class="control-label"></label>
                <input asp-for="TTL" class="form-control" />
                <span asp-validation-for="TTL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecordClass" class="control-label"></label>
                <input asp-for="RecordClass" class="form-control" />
                <span asp-validation-for="RecordClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecordType" class="control-label"></label>
                <input asp-for="RecordType" class="form-control" />
                <span asp-validation-for="RecordType" class="text-danger"></span>
            </div>
